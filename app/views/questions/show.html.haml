%h2.mb-3
  =@question.quiz.title
= render partial: "question", locals: { question: @question }

%h3.my-1
  答えは？
= form_with scope: :post, url: answer_quiz_question_path, local: true do |f|
  .form-group.row
    .col-lg-4.offset-lg-2.col-md-5.offset-md-1.col-sm-6.col-6
      = f.radio_button :answer, true, checked: true
      = f.label(:answer, "○", value: true, id: "answerbox--yes", class: "my-2")
    .col-lg-4.col-md-5.col-sm-6.col-6
      = f.radio_button :answer, false
      = f.label(:answer, "×", value: false, id:"answerbox--no", class: "my-2")
  = f.submit "解答する", class: "btn btn-block btn-primary"