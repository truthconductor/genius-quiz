= form_with model: quiz, local: true do |f|
  .p-2
    .form-group
      = f.label :title
      = f.text_field :title, class: "form-control", id: "title"
    .form-group
      = f.label :description
      = f.text_area :description, rows: 3, class: "form-control", id: "description"
  = f.fields_for :questions do |question|
    .p-2
      %h2.my-2
        ="第#{question.object.order}問"
      = question.hidden_field :order
      .form-group
        = question.label :sentence
        = question.text_area :sentence, rows: 3, class: "form-control"
      .form-group
        %label 正解
        = question.radio_button :is_yes, "true", class:"ml-2"
        = question.label(:is_yes, "○", value: "true")
        = question.radio_button :is_yes, "false", class:"ml-2"
        = question.label(:is_yes, "×", value: "false")
      .form-group
        = question.label :explanation
        = question.text_area :explanation, rows: 3, class: "form-control"
  = f.submit nil, class: "btn btn-primary"