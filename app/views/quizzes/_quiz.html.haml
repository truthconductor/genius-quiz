.col-lg-4.col-md-6.col-sm-6.col-xs-12.my-2
  .card.bg-light.border-light.shadow
    .card-body
      %h5.card-title
        = quiz.title
      %p.card-text
        = quiz.description
      -if quiz.user.id != current_user&.id
        =link_to "挑戦する", "#", class: "btn btn-primary"
      - else
        =link_to "編集する", edit_quiz_path(quiz), class: "btn btn-info"
        =link_to "削除する", quiz, method: :delete, data: { confirm: "クイズ「#{quiz.title}」を削除します。よろしいですか？"}, class: "btn btn-danger"